<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/image_listec_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginTop="80px"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logo_tec_patz" />

    <ImageView
        android:id="@+id/image_listec_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/image_listec" />


    <Button
        android:id="@+id/BotonAMGrupos"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/blue1"
        android:drawableRight="@drawable/checklist_icon"
        android:text="@string/grupos_activity_main"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/BotonAMEstadisticas"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"

        android:background="@color/darkGrey"
        android:backgroundTint="@color/red1"
        android:drawableRight="@drawable/admin_icon"
        android:text="@string/estadisticas_activity_main"
        android:textStyle="bold" />


</LinearLayout>